import java.awt.*;



public abstract class Figura {
	private int x1;
	private int y1;
		
	 public int getX1() {
		return x1;
	}

	public void setX1(int x1) {
		this.x1 = x1;
	}

	public int getY1() {
		return y1;
	}

	public void setY1(int y1) {
		this.y1 = y1;
	}

	public Figura() {
		 super();
	      
	    }
	public Figura(int x, int y){
		x1=x;
		y1=y;
	}
	 
	 public abstract double area();
	 public abstract double perimetro();
	 public abstract void DibujarFigura(Graphics aux);
}
